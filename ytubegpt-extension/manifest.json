{
  "manifest_version": 3,
  "name": "YTube GPT",
  "description": "Your personal YouTube assistant",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "webRequest"],
  "host_permissions": ["*://localhost:*/*"],
  "action": {},
  "background": {
    "service_worker": "src/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "css": ["src/styles.css"],
      "matches": ["https://*.youtube.com/watch*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
